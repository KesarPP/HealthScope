{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",                     // output will go to root/dist
    "rootDir": ".",                         // look from current directory (project root)
    "baseUrl": ".",                         // base for path aliasing
    "paths": {
      "@shared/*": ["shared/*"]             // resolves @shared/schema etc.
    },
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["server", "shared", "vite.config.ts"],
  "exclude": ["dist"]
}
